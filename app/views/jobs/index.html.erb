All Jobs for <strong><%= @company.name %></strong>

<% @jobs.each do |job| %>
  <ul><%= link_to job.title, company_job_path(@company, job) %> at <%= job.company.name %>
    <%= link_to "Delete", company_job_path(@company, job), method: :delete %>
  </ul>
<% end %>

<% @company.contacts.each do |contact| %>
<ul>
  <%= contact.first_name %> <%= contact.last_name %></br>
  <%= contact.position %></br>
  <%= contact.email %></br>
</ul>
<% end %>

<%= form_for @contact do |f| %>

<%= f.label :first_name %>
<%= f.text_field :first_name %>

<%= f.label :last_name %>
<%= f.text_field :last_name %>

<%= f.label :position %>
<%= f.text_field :position %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= hidden_field(:company, :id) %>

<%= f.submit %>
<% end %>
